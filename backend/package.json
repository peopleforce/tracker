{
  "name": "app",
  "private": "true",
  "type": "module",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.13",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "chart.js": "^4.2.0",
    "chartjs-plugin-annotation": "^3.1.0",
    "esbuild": "^0.25.3",
    "esbuild-rails": "^1.0.7",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.21"
  },
  "scripts": {
    "build": "yarn build:css & yarn build:js",
    "build:js": "esbuild app/javascript/* --bundle --outdir=app/assets/builds",
    "build:js:watch": "esbuild app/javascript/* --bundle --outdir=app/assets/builds --watch",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css",
    "build:css:watch": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.4"
  }
}
